<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp"
    android:background="@color/back_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IVPersonImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:id="@+id/LLMainPersonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLActivityInitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVPersonActivityNameInit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="serif-monospace"
                android:text="Name: "
                android:textColor="@color/white_gray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/TVPersonActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="@color/white_gray"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLActivityInitTextSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVPersonActivityNameInit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.3"
                android:fontFamily="serif-monospace"
                android:text="Gender: "
                android:textColor="@color/white_gray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/TVPersonActivity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="@color/white_gray"
                android:textSize="17sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLActivityInitTextThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVPersonActivityNameInit3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.3"
                android:fontFamily="serif-monospace"
                android:text="Homeworld: "
                android:textColor="@color/white_gray"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/TVPersonActivity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="@color/white_gray"
                android:textSize="17sp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>